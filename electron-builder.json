	{
		"productName": "TruevisionDesigner",
		"publish": [
			{
				"provider": "github",
				"owner": "truevisionai",
				"repo": "designer",
				"releaseType": "release"
			}
		],
		"directories": {
			"output": "release/",
			"buildResources": "build/"
		},
		"files": [
			"dist/**/*",
			"node_modules/**/*",
			"main.js",
			"preload.js",
			"index.html",
			"package.json"
		],
		"extraResources": [
			"default-project",
			"app-update.yml"
		],
		"linux": {
			"category": "Utility",
			"target": "AppImage",
			"extraFiles": [
				"esmini/linux"
			]
		},
		"win": {
			"target": "nsis",
			"extraFiles": [
				"esmini/win32"
			]
		},
		"nsis": {
			"oneClick": false,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		}
	}
