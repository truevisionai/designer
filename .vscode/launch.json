{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Electron: Localhost",
			"type": "chrome",
			"request": "launch",
			"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
			"runtimeArgs": [
				"${workspaceRoot}/main.js",
				"--open-dev-tools",
				"--disable-splash",
				"--locahost",
				"--remote-debugging-port=9223",
			],
			"windows": {
				"runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
			},
			"webRoot": "${workspaceRoot}/src"
		},
		{
			"name": "Electron: File",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"runtimeArgs": [
				"--open-dev-tools",
				"--disable-splash",
				"--remote-debugging-port=9223",
				"."
			],
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			}
		},
		{
			"name": "Electron: Attach",
			"type": "chrome",
			"request": "attach",
			"port": 9223,
			"webRoot": "${workspaceFolder}",
			"timeout": 15000
		},
		{
			"name": "Karma-Test-Debug",
			"type": "chrome",
			"request": "attach",
			"address": "127.0.0.1",
			"port": 9333,
			"webRoot": "${workspaceRoot}",
			"pathMapping": {
				"/": "${workspaceRoot}/",
				"/base/": "${workspaceRoot}/"
			}
		},
		{
			"name": "Debug Main Process",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
			"windows": {
				"runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
			},
			"args": [
				".",
				"--open-dev-tools",
				"--disable-splash",
				"--localhost"
			],
			"outputCapture": "std"
		},
	],
	"compounds": [
		{
			"name": "Debug Electron: File",
			"configurations": [
				"Electron: Attach",
				"Electron: File"
			]
		},
		{
			"name": "Debug Electron: Localhost",
			"configurations": [
				"Electron: Attach",
				"Electron: Localhost"
			]
		}
	]
}
